<!DOCTYPE html>
<html lang="zh-TW">
<%- include('partials/header') %>
<body id="app-body" class="bg-black text-white m-0 p-0 overflow-x-hidden transition-colors duration-500 font-sans min-h-screen">
    <%- include('partials/navbar') %>

    <div class="h-[calc(100vh-80px)] flex flex-col overflow-hidden pt-20">
        <div class="glass-dark border-b border-white/10 p-6 z-20 space-y-4">
            <div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-center gap-6">
                <div class="flex items-center gap-6">
                    <h1 class="text-2xl font-light tracking-[0.2em] uppercase">STORES</h1>
                    <div class="flex bg-white/5 p-1 rounded-xl border border-white/10">
                        <button onclick="setStoreView('map')" id="btn-view-map" class="flex items-center gap-2 px-4 py-1.5 rounded-lg text-sm font-bold tracking-widest transition-all bg-white text-black">
                            <span class="material-symbols-rounded text-sm">map</span> MAP
                        </button>
                        <button onclick="setStoreView('table')" id="btn-view-table" class="flex items-center gap-2 px-4 py-1.5 rounded-lg text-sm font-bold tracking-widest transition-all opacity-40 hover:opacity-100">
                            <span class="material-symbols-rounded text-sm">list_alt</span> TABLE
                        </button>
                    </div>
                </div>
                
                <div class="flex flex-wrap items-center gap-4 w-full md:w-auto">
                     <div class="relative flex-1 md:flex-none">
                        <span class="material-symbols-rounded absolute left-4 top-1/2 -translate-y-1/2 opacity-30 text-sm">search</span>
                        <input type="text" id="store-search" placeholder="搜尋美食..." oninput="filterStores()" class="pl-10 pr-4 py-2.5 rounded-xl bg-white/5 border border-white/10 outline-none focus:border-blue-500/50 text-sm w-full md:w-64" />
                     </div>
                     <div class="flex gap-2">
                         <% [{id:'all',l:'全部'},{id:'noodle',l:'麵食'},{id:'rice',l:'米飯'},{id:'western',l:'西式'},{id:'light',l:'輕食'}].forEach(c => { %>
                             <button onclick="setStoreCategory('<%= c.id %>')" class="store-cat-btn px-3 py-1.5 rounded-lg text-3sm font-bold tracking-[0.1em] uppercase transition-all border bg-white/5 border-white/5 opacity-50" data-id="<%= c.id %>"><%= c.l %></button>
                         <% }); %>
                     </div>
                </div>
            </div>
        </div>

        <div id="view-map" class="flex-1 flex flex-col lg:flex-row overflow-hidden relative">
            <div class="w-full lg:w-96 h-full glass border-r border-white/10 overflow-y-auto custom-scrollbar p-6 space-y-4" id="store-list-sidebar">
                </div>
            <div id="map" class="flex-1 bg-zinc-900 h-full w-full map-dark-mode"></div>
        </div>

        <div id="view-table" class="hidden flex-1 overflow-y-auto custom-scrollbar p-6">
            <div class="max-w-7xl mx-auto glass rounded-[2rem] overflow-hidden border border-white/10">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="bg-white/5 text-sm uppercase tracking-[0.2em] font-bold text-white/40 border-b border-white/10">
                            <th class="px-8 py-5">店家名稱</th>
                            <th class="px-6 py-5">類別</th>
                            <th class="px-6 py-5">價位</th>
                            <th class="px-6 py-5">評分</th>
                            <th class="px-8 py-5 text-right">操作</th>
                        </tr>
                    </thead>
                    <tbody id="store-table-body" class="divide-y divide-white/5">
                        </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>window.FOOD_DATA = <%- JSON.stringify(foods) %>;</script>
    <script src="/js/main.js"></script>
    <%- include('partials/modals') %>
</body>
</html>