<div id="settings-modal" class="hidden fixed inset-0 z-[100] items-center justify-center p-4 bg-black/90 backdrop-blur-md">
        <div class="glass-dark w-full max-w-xl rounded-[3rem] p-10 border border-white/10 relative">
            <div class="flex justify-between items-center mb-10">
                <h2 class="text-2xl font-light tracking-widest uppercase">個性化設定</h2>
                <button onclick="toggleModal('settings-modal')" class="w-10 h-10 flex items-center justify-center hover:bg-white/10 rounded-full">
                    <span class="material-symbols-rounded">close</span>
                </button>
            </div>
            <div class="space-y-6">
                <label class="text-[10px] opacity-50 uppercase tracking-[0.3em] font-bold">主題切換</label>
                <div class="grid grid-cols-2 gap-4">
                    <% themes.forEach(function(t) { %>
                        <button 
                            data-id="<%= t.id %>"
                            onclick="selectTheme('<%= t.id %>')"
                            class="theme-btn p-5 rounded-[1.5rem] border border-white/10 bg-white/5 hover:border-white/30 text-left transition-all">
                            <div class="text-sm font-medium"><%= t.name %></div>
                        </button>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>

    <div id="dashboard-modal" class="hidden fixed inset-0 z-[100] items-center justify-center p-4 bg-black/90 backdrop-blur-md">
        <div class="glass-dark w-full max-w-xl rounded-[3rem] p-10 border border-white/10 relative">
            <div class="flex justify-between items-center mb-10">
                <h2 class="text-2xl font-light tracking-widest uppercase">個人數據統計</h2>
                <button onclick="toggleModal('dashboard-modal')" class="w-10 h-10 flex items-center justify-center hover:bg-white/10 rounded-full">
                    <span class="material-symbols-rounded">close</span>
                </button>
            </div>
            <div class="space-y-8">
                <div class="grid grid-cols-2 gap-4">
                  <div class="p-6 rounded-3xl bg-white/5 border border-white/10 text-center">
                    <div class="text-[10px] uppercase opacity-40 tracking-widest mb-1">決策數</div>
                    <div id="stat-decisions" class="text-3xl font-light">0</div>
                  </div>
                  <div class="p-6 rounded-3xl bg-white/5 border border-white/10 text-center">
                    <div class="text-[10px] uppercase opacity-40 tracking-widest mb-1">平均秒數</div>
                    <div id="stat-avg" class="text-3xl font-light">0.0s</div>
                  </div>
                </div>
                <div class="space-y-4">
                  <h4 class="text-[10px] uppercase tracking-widest opacity-40 font-bold px-2">偏好類別</h4>
                  <div id="stat-categories" class="space-y-2">
                    </div>
                </div>
              </div>
        </div>
    </div>

    <script src="/js/main.js"></script>